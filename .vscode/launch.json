{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension QUIC.EXE",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "quic-build",
            "program": "${workspaceFolder}/extensions/quic/bin/Debug/net8.0/quic.exe",
            "args": ["--host", "127.0.0.1", "--webport", "5001", "--quicport", "5002", "--vvhost", "127.0.0.1", "--vvport", "1337", "--vvext", "internal"],
            "cwd": "${workspaceFolder}/extensions/quic/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Extension QUIC.ELF",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "quic-build",
            "program": "${workspaceFolder}/extensions/quic/bin/Debug/net8.0/quic",
            "args": ["--host", "0.0.0.0", "--webport", "5001", "--quicport", "5002", "--vvhost", "127.0.0.1", "--vvport", "1337", "--vvext", "internal"],
            "cwd": "${workspaceFolder}/extensions/quic/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/extensions/quic"
            }
        },
    
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "skipFiles": [
                "<node_internals>\\**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start:nodemon"
            ], 
            "cwd": "${workspaceFolder}/server",
            "outputCapture": "std"
        }
    ]
}
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Client",
            "runtimeArgs": [
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/client"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "skipFiles": [
                "<node_internals>\\**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:nodemon"
            ], 
            "cwd": "${workspaceFolder}/server"
        }
        
    ]
}